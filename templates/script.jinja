<!DOCTYPE html>
<html>
  <head lang="en">
    <meta charset="UTF-8" />
    <title>{{ title }}</title>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Alegreya+Sans+SC:ital,wght@0,100;0,300;0,400;0,500;0,700;0,800;0,900;1,100;1,300;1,400;1,500;1,700;1,800;1,900&family=Dancing+Script:wght@700&family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900" rel="stylesheet">

    <link rel="stylesheet" href="file://{{template_folder}}/style.css">
    <link rel="stylesheet" href="file://{{generated_folder}}/generated.css">
  </head>
  <body>

    {%- set fabled = characters.pop('fabled') -%}
    {%- set travelers = characters.pop('traveler') -%}
    {%- if script_options.pdf_format == "easyprint"  or script_options.pdf_format == "sample" -%}
    {%- set multipage_activated = True %}
    {%- endif -%}


    <footer>
      <div class="footer-left">
        This script is not affiliated with The Pandemonium Institute.
      </div>
      <div class="footer-right">
        <a href="https://make.arcane-scripts.net">make.arcane-scripts.net</a>
        (v{{ _project._version }})
        {% include "options.jinja" %}
      </div>
    </footer>

    {% include 'player-reference-easyloop.jinja' %}

    {%- if script_options.simple_night_order == True %}
    {%- set night_include = "simple-night-order.jinja" -%}
    {%- else -%}
    {%- set night_include = "full-fat-night-order.jinja" -%}
    {%- endif %}

    {% include night_include %}



</body>
</html>
